rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /reminders/{reminderId} {
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.userId;
      allow read, update, delete: if isSignedIn() && request.auth.uid == resource.data.userId;
    }

    match /recurringReminders/{docId} {
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.userId;
      allow read, update, delete: if isSignedIn() && request.auth.uid == resource.data.userId;
    }

    match /users/{userId}/workoutPlan/{documentId} {
      allow read, write: if isOwner(userId);
    }

    match /users/{userId}/workoutWeights/{documentId} {
      allow read, write: if isOwner(userId);
    }

    match /users/{userId}/workoutCompletions/{documentId} {
      allow read, write: if isOwner(userId);
    }

    match /users/{userId}/workoutSettings/{documentId} {
      allow read, write: if isOwner(userId);
    }

    match /users/{userId}/workoutHistory/{documentId} {
      allow read, write: if isOwner(userId);
    }
  }
}
